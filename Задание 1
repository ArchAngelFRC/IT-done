#include <iostream>
#include <string>
using namespace std;

int main() {
    // Объявление переменных для хранения данных о студенте
    string имя, фамилия, группа;
    int возраст;

    // Запрос имени студента
    cout << "Введите имя студента: ";
    cin >> имя;

    // Запрос фамилии студента
    cout << "Введите фамилию студента: ";
    cin >> фамилия;

    // Запрос группы студента
    cout << "Введите группу студента: ";
    cin >> группа;

    // Запрос возраста студента
    cout << "Введите возраст студента: ";
    cin >> возраст;

    // Получение текущего года
    int текущийГод = 2023; // Вам нужно обновить эту дату на текущий год

    // Вычисление года рождения
    int годРождения = текущийГод - возраст;

    // Вывод информации о студенте
    cout << имя << " " << фамилия << " - " << годРождения << " год рождения - " << группа << endl;

    return 0;
}
